<script>

    var myModal = new bootstrap.Modal(document.getElementById('MyModal'), {
        keyboard: false
    })

    function abrirModalPdto(){
        myModal.show();
    }


    function Registrar_Producto(){

        const datos = new URLSearchParams();
        datos.append('nombrePdto',document.getElementById('nombrePdto').value);
        datos.append('referencia',document.getElementById('referencia').value);
        datos.append('tipoPdto',document.getElementById('tipoPdto').value);
        datos.append('estadoPdto',document.getElementById('estadoPdto').value);
        datos.append('precio',document.getElementById('precio').value);
        datos.append('cantidad',document.getElementById('cantidad').value);
        datos.append('categoria',document.getElementById('categoria').value);
        datos.append('empresa',document.getElementById('empresa').value);
            
        fetch('/registrarProducto',
        {
            method:'post',
            body:datos
        }).then(resp=>resp.json())
        .then(data=>{
            myModal.hide();
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
        })
        ListarProducto();
    }

    function EliminarPdto(ident) {

    fetch(`/EliminarPdtos/${ident}`,
        {
            method:'get'
        }).then(resp=>resp.json())
        .then(data=>{
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
            ListarProducto();
        });

    }
    function ListarProductos(){
        fetch('/ListarProducto',
                 {method:'GET'}
        ).then(resp=>resp.json()
        ).then(listaProductos=>{

            let html='';

            for(var i=0; i<listaProductos.length; i++){
                
                    html+=`<tr><td>${listaProductos[i].PK_codigoProducto}</td>`
                    html+=`<td>${listaProductos[i].nombreProducto}</td>`
                    html+=`<td>${listaProductos[i].referencia}</td>`
                    html+=`<td>${listaProductos[i].tipoProducto}</td>`
                    html+=`<td>${listaProductos[i].estadoProducto}</td>`
                    html+=`<td>${listaProductos[i].precioProducto}</td>`
                    html+=`<td>${listaProductos[i].cantidadProductos}</td>`
                    html+=`<td>${listaProductos[i].nombreCategoria}</td>`
                    html+=`<td>${listaProductos[i].nombre}</td>` 
                    html+=`<td> <a href='javascript:EliminarPdto(${listaProductos[i].PK_codigoProducto});' 
                        class='btn btn-outline-dark'>Eliminar</a></td>`
                    html+=`</tr>`;
                }
                document.getElementById('tabla').innerHTML=html;
            })
    }
</script>