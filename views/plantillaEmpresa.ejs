<script>

    var myModal = new bootstrap.Modal(document.getElementById('MyModal'), {
        keyboard: false
    })

    function abrirModalEmp(){
        myModal.show();
    }


    function Registrar_Empresa(){

        const datos = new URLSearchParams();
        datos.append('nitEmpresa',document.getElementById('nitEmpresa').value);
        datos.append('nombreEmpresa',document.getElementById('nombreEmpresa').value);
        datos.append('ubicacion',document.getElementById('ubicacion').value);
        datos.append('Propietario',document.getElementById('Propietario').value);
            
        fetch('/registrarEmpresas',
        {
            method:'post',
            body:datos
        }).then(resp=>resp.json())
        .then(data=>{
            myModal.hide();
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
        })
        Lista_Empresa();
    }

    function EliminarEmpresas(ident) {

    fetch(`/EliminarEmpresas/${ident}`,
        {
            method:'get'
        }).then(resp=>resp.json())
        .then(data=>{
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
            Lista_Empresa();
        });

    }
    function Lista_Empresa(){
        fetch('/listarEmpresas',
                 {method:'GET'}
        ).then(resp=>resp.json()
        ).then(listaEmpresa=>{

            let html='';

            for(var i=0;i<listaEmpresa.length;i++){
                
                    html+=`<tr><td>${listaEmpresa[i].PK_idEmpresa}</td>`
                    html+=`<td>${listaEmpresa[i].nitEmpresa}</td>`
                    html+=`<td>${listaEmpresa[i].nombre}</td>`
                    html+=`<td>${listaEmpresa[i].ubicacion}</td>`
                    html+=`<td>${listaEmpresa[i].propietario}</td>`
                    html+=`<td> <a href='javascript:EliminarEmpresas(${listaEmpresa[i].PK_idEmpresa});' 
                        class='btn btn-outline-dark'>Eliminar</a></td>`
                    html+=`</tr>`;
                }
                document.getElementById('tabla').innerHTML=html;
            })
    }
</script>
 