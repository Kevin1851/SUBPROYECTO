<script>

    var myModal = new bootstrap.Modal(document.getElementById('MyModal'), {
        keyboard: false
    })

    function abrirModalCTG(){
        myModal.show();
    }


    function Registrar_Categoria(){

        const datos = new URLSearchParams();
        datos.append('nombreCategoria',document.getElementById('nombreCategoria').value);
        datos.append('cantidadProductoCtg',document.getElementById('cantidadProductoCtg').value);
            
        fetch('/registrarCategorias',
        {
            method:'post',
            body:datos
        }).then(resp=>resp.json())
        .then(data=>{
            myModal.hide();
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
        })
        Lista_Categorias();
    }

    function EliminarCategoria(ident) {

    fetch(`/EliminarCategorias/${ident}`,
        {
            method:'get'
        }).then(resp=>resp.json())
        .then(data=>{
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
            Lista_Categorias();
        });

    }
    function Lista_Categorias(){
        fetch('/listarCategoria',
                 {method:'GET'}
        ).then(resp=>resp.json()
        ).then(listaCategoria=>{

            let html='';

            for(var i=0;i<listaCategoria.length;i++){
                
                    html+=`<tr><td>${listaCategoria[i].PK_idCategoria}</td>`
                    html+=`<td>${listaCategoria[i].nombreCategoria}</td>`
                    html+=`<td>${listaCategoria[i].cantidadProducto	}</td>` 
                    html+=`<td> <a href='javascript:EliminarCategoria(${listaCategoria[i].PK_idCategoria});' 
                        class='btn btn-outline-dark'>Eliminar</a></td>`
                    html+=`</tr>`;
                }
                document.getElementById('tabla').innerHTML=html;
            })
    }
</script>
