<script>
var myModal = new bootstrap.Modal(document.getElementById('MyModal'), {
        keyboard: false
    })

    function abrirModalCliente(){
        myModal.show();
    }


    function Registrar_Cliente(){

        const datos = new URLSearchParams();
        datos.append('identificacion',document.getElementById('identificacion').value);
        datos.append('nombre',document.getElementById('nombre').value);
        datos.append('fechaNacimiento',document.getElementById('fechaNacimiento').value);
        datos.append('estado',document.getElementById('estado').value);
        datos.append('contrasenia',document.getElementById('contrasenia').value);
        datos.append('correo',document.getElementById('correo').value);
        datos.append('telefono',document.getElementById('telefono').value);
            
        fetch('/RegistrarClientes',
        {
            method:'post',
            body:datos
        }).then(resp=>resp.json())
        .then(data=>{
            myModal.hide();
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
        })
        Listar_Cliente();
    }

    function EliminarCliente(ident) {

    fetch(`/EliminarCliente/${ident}`,
        {
            method:'get'
        }).then(resp=>resp.json())
        .then(data=>{
            Swal.fire({
            position: 'center',
            icon: 'success',
            title:data.mensaje,
            showConfirmButton: false,
            timer: 1500
            })
            Listar_Cliente();
        });

    }
    function Listar_Cliente(){
        fetch('/listarCliente',
                 {method:'GET'}
        ).then(resp=>resp.json()
        ).then(listadoCliente=>{

            let html='';

            for(var i=0; i<listadoCliente.length; i++){
                
                    html+=`<tr><td>${listadoCliente[i].PK_id_cliente }</td>`
                    html+=`<td>${listadoCliente[i].identificacion_cliente}</td>`
                    html+=`<td>${listadoCliente[i].nombreCliente}</td>`
                    html+=`<td>${listadoCliente[i].fechaNacimientoCliente}</td>`
                    html+=`<td>${listadoCliente[i].estadoCliente}</td>`
                    html+=`<td>${listadoCliente[i].contraseniaCliente}</td>`
                    html+=`<td>${listadoCliente[i].correoCliente}</td>`
                    html+=`<td>${listadoCliente[i].telefonoCliente}</td>` 
                    html+=`<td> <a href='javascript:EliminarCliente(${listadoCliente[i].PK_id_cliente});' 
                        class='btn btn-outline-dark'>Eliminar</a></td>`
                    html+=`</tr>`;
                }
                document.getElementById('tabla').innerHTML=html;
            })
    }
</script>